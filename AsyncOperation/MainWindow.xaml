<Window x:Class="AsyncOperation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncOperation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Sync : UI will hang" Width="auto" Height="35" Click="SyncButton_Click" />
        <Button Grid.Row="1" Content="Async : UI will not hang" Width="auto" Height="35" Click="AsyncButton_Click" />
        <Button Grid.Row="2" Content="Async : UI will not hang fast" Width="auto" Height="35" Click="AsyncFastButton_Click" />
        
    </Grid>
</Window>
